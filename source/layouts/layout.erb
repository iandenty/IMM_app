<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "The Middleman" %></title>
    <%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Raleway" %>    
    <%= stylesheet_link_tag "normalize", "all", "c3", "nav", "about", "country" %>
    <%= stylesheet_link_tag "http://libs.cartocdn.com/cartodb.js/v3/themes/css/cartodb.css" %>
    <%= stylesheet_link_tag "http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" %>

    <%= javascript_include_tag  "https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js" %>
    <%= javascript_include_tag  "http://libs.cartocdn.com/cartodb.js/v3/cartodb.js" %>
    <%= javascript_include_tag  "d3" %>
    <%= javascript_include_tag  "c3" %>
    <%= javascript_include_tag  "http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js" %>
    <%= javascript_include_tag  "all" %>
  </head>
  
  <body class="<%= page_classes %>">
    <%= partial "partials/nav" %>
    <%= yield %>
  </body>
</html>